<resources>

    <!-- Base application theme - will be used by v21 and older phones -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- used in manifest as theme for MainActivity - will be used by older phones -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- used in activity_main.xml to set up AppBarLayout -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- used in activity_main.xml to set up Toolbar -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_gravity">center</item>
        <!-- does not work from xml, does work from code (?) -->
        <item name="android:gravity">center</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Flashcard">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="FlashcardText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="FlashcardText.Edit">
        <item name="android:imeOptions">actionDone</item>
    </style>


</resources>
