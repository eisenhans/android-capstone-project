<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/add_word_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView style="@style/Flashcard">
            <EditText android:id="@+id/foreign_word_edittext" style="@style/FlashcardText" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/Flashcard">
            <EditText android:id="@+id/native_word_edittext" style="@style/FlashcardText" />
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>